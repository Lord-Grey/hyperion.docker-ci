ARG DIST="debian"
ARG SUITE="buster"
ARG REPOSITORY="https://github.com/hyperion-project"
FROM amd64/${DIST}:${SUITE}
ARG DIST
ARG SUITE
ARG REPOSITORY

LABEL maintainer="Hyperion Project <admin@hyperion-project.org>" \
	org.opencontainers.image.title="amd64" \
	org.opencontainers.image.description="Compilation environment to build the ${DIST} ${SUITE} (amd64) APT packages" \
	org.opencontainers.image.url="${REPOSITORY}" \
	org.opencontainers.image.source="${REPOSITORY}/hyperion.docker-ci" \
	org.opencontainers.image.vendor="Hyperion Project"

ENV DEBFULLNAME="Hyperion Project" \
    DEBEMAIL="admin@hyperion-project.org"

# install deps
ARG DEBIAN_FRONTEND=noninteractive
RUN \
	apt-get update && \
	apt-get install -yq \
	build-essential \
	cmake \
	devscripts \
	fakeroot \
	git \
	libavahi-core-dev \
	libavahi-compat-libdnssd-dev \
	libcec-dev \
	libdistro-info-perl \
	libmbedtls-dev \
	libqt5serialport5-dev \
	libqt5sql5-sqlite \
	libqt5svg5-dev \
	libqt5x11extras5-dev \
	libasound2-dev \
	libjpeg-dev \
	libturbojpeg0-dev \
	libusb-1.0-0-dev \
	libxcb-util0-dev \
	libxcb-randr0-dev \
	libxcb-shm0-dev \
	libxcb-render0-dev \
	libxcb-image0-dev \
	libxrandr-dev \
	libxrender-dev \
	python3-dev \
	qtbase5-dev \
	zlib1g-dev \
	libssl-dev \
	libftdi1-dev && \
	apt-get clean -q -y && \
	apt-get autoremove -y && \
	rm -rf /var/lib/apt/lists/*
