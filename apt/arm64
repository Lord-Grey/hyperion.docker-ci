ARG DIST="aarch64-debian"
ARG SUITE="buster"
ARG REPOSITORY="https://github.com/hyperion-project"
FROM balenalib/${DIST}:${SUITE}-build
ARG DIST
ARG SUITE
ARG REPOSITORY

LABEL maintainer="Hyperion Project <admin@hyperion-project.org>" \
	org.opencontainers.image.title="arm64" \
	org.opencontainers.image.description="Compilation environment to build the ${DIST} ${SUITE} (arm64) APT packages" \
	org.opencontainers.image.url="${REPOSITORY}" \
	org.opencontainers.image.source="${REPOSITORY}/hyperion.docker-ci" \
	org.opencontainers.image.vendor="Hyperion Project"

ENV DEBFULLNAME="Hyperion Project" \
    DEBEMAIL="admin@hyperion-project.org"

ENV QEMU_EXECVE 1
RUN [ "cross-build-start" ]

RUN if [ "$DIST" = "aarch64-debian" ]; then \
        echo "deb http://archive.raspberrypi.org/debian ${SUITE} main ui" >>  /etc/apt/sources.list.d/raspi.list && \
        apt-key adv --batch --keyserver keyserver.ubuntu.com  --recv-key 0x82B129927FA3303E; \
    fi

# install deps
ARG DEBIAN_FRONTEND=noninteractive
RUN \
	install_packages \
	devscripts \
	fakeroot \
	libdistro-info-perl \
    cmake \
	git \
	python3-dev \
	qtbase5-dev \
	libqt5serialport5-dev \
	libqt5sql5-sqlite \
	libqt5svg5-dev \
	build-essential \
	libusb-1.0-0-dev \
	libcec-dev \
	libavahi-core-dev \
	libavahi-compat-libdnssd-dev \
	zlib1g-dev \
	libasound2-dev \
	libjpeg-dev \
	libturbojpeg0-dev \
	libmbedtls-dev \
	libftdi1-dev && \
    if [ "$DIST" = "aarch64-ubuntu" ] || [ "$SUITE" = "bookworm" ] ; then \
		install_packages libqt5x11extras5-dev libxcb-util0-dev libxcb-randr0-dev libxcb-shm0-dev libxcb-render0-dev libxcb-image0-dev libxrandr-dev libxrender-dev libssl-dev; \
    else \
        install_packages libraspberrypi-dev libssl-dev; \
    fi && \
	apt-get clean -q -y && \
	apt-get autoremove -y && \
	rm -rf /var/lib/apt/lists/*

RUN [ "cross-build-end" ]
ENTRYPOINT ["/usr/bin/qemu-aarch64-static"]
